page{
  background-color: #df543b;
}

.newBgTitle{
  width: 720rpx;
  height: 450rpx;
  margin: 0 auto;
  margin-top: 50rpx;
}

.answerTime{
  text-align: center;
  font-size: 28rpx;
  color: #dfdfdf;
}

.getNumber{
  text-align: center;
  font-size: 28rpx;
  color: #aeaeae;
  margin-bottom: 20rpx;
}

.startAnswer{
  width: 430rpx;
  height: 100rpx;
  background-color: #efeeee;
  margin: 0 auto;
  line-height: 100rpx;
  text-align: center;
  font-size: 45rpx;
  color: #df543b;
  margin-top: 150rpx;
  font-weight: bold; 
}


.finishAnswer{
  position: absolute;
  top: 250rpx;
  left: 50%;
  transform: translate(-50%,0);
}

.answer_result{
  width: 450rpx;
  height: 550rpx;
}

.rightNum,.getNum{
  color: #ffffff;
  margin-top: -120rpx;
  text-align: center;
}


.cloud{
  width: 100%;
  height: 120rpx;
  position: absolute;
  bottom: 0;
}


.authorize{
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: 0.7;
  position: absolute;
  top: 0;
}

.tip{
  color: #ffffff;
  font-size: 40rpx;
  margin-top: 500rpx;
}

.verifyTele{
  width: 450rpx;
  background-color: #ffffff;
  top: 500rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%,0);
  border-radius: 15rpx;
  margin-bottom: 30rpx;
}

.inputTele{
  text-align: center;
  border: 1rpx solid #dcdbdb;
  margin: 20rpx;
  padding: 20rpx;
}

.verify{
  background-color: #77e030;
  width: 120rpx;
  height: 70rpx;
  line-height: 70rpx;
  color: #ffffff;
  margin-left: auto;
  margin-right: auto;
  text-align: center;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}